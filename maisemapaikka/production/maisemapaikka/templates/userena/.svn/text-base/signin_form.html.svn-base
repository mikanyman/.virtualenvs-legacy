{% extends "portal/base_accounts.html" %}
{% load i18n %}

{% block title %}{% trans "Signin" %}{% endblock %}

{% block description %}
<span class="section_header">{% trans "Signin" %}</span>
{% endblock %}

{% block content %}
<div class="padding_20">
  <form action="" method="post">{% csrf_token %}
  <table>
  <tr><td colspan="2" class="error">{{ form.non_field_errors }}</td></tr>
  {% for field in form %}
  <tr><td colspan="2" class="error">{{ field.errors }}</td></tr>
  {% comment %} Displaying checkboxes differently {% endcomment %}
  {% if field.name == 'remember_me' %}
  <tr><td colspan="2" class="checkbox"><label for="id_{{ field.name }}">{{ field }} {{ field.label }}</label></td></tr>
  {% else %}
  <tr><td style="text-align:right">{{ field.label_tag }}: </td><td>{{ field }}</td></tr>
  {% endif %}
  {% endfor %}
  </table>
  <p><input type="submit" value="{% trans "Signin" %}" /><p>
  <p class="forgot-password"><a href="{% url userena_password_reset %}" title="{% trans "Forgot your password?" %}">{% trans "Forgot your password?" %}</a></p>
  </form>
</div>
{% endblock %}
