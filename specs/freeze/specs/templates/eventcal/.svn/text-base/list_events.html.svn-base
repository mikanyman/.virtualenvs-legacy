{% for event in content_from_callable %}
  <h1 class="orange">{{ event.theme}}</h1>
  {% ifequal event.evtimestart|date:"i:H" "00:00" %}
    <!-- Aika nolla -->
    {% if event.evtimestart %}<p><strong>{{ event.evtimestart|date:"d.m.Y" }}</strong>{% endif %}
    {% if event.evtimend %}<strong> - {{ event.evtimend|date:"d.m.Y" }}</strong>,{% endif %}
  {% else %}
    <!-- Aika mainittu -->
    {% if event.evtimestart %}<p><strong>{{ event.evtimestart|date:"d.m.Y k\lo H:i" }}</strong>{% endif %}
    {% if event.evtimend %}<strong> - {{ event.evtimend|date:"H:i" }}</strong>,{% endif %}
  {% endifequal %}{% if event.placename %} {{ event.placename }}</p>{% endif %}

  {% if event.description %}<p>{{ event.description|safe}}</p>{% endif %}
  {% if event.placedescription %}<p><strong>Tulo-ohje</strong>: {{ event.placedescription}}</p>{% endif %}
  {% if event.author %}<p><strong>{{ event.author}}</strong></p>{% endif %}
  {% if not forloop.last %}
  <hr style="height:1px; color:#EFEFEF" />
  {% endif %}
{% endfor %}
