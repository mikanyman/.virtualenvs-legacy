{% extends "etreg/base.html" %}
{% load i18n %}
{% load cms_tags %}

{% block content %}

{% ifequal gen_view "create" %}<form action="." method="POST">{% csrf_token %}{% endifequal %}
{% ifequal gen_view "update" %}<form action="." method="POST">{% csrf_token %}{% endifequal %}
{% ifequal gen_view "detail" %}{% endifequal %}

<table class="ereg_hea">
<tbody>
<tr>
  <td>
    {% ifequal gen_view "detail" %}
    <ul>
    <li><a href="/etreg/create/">{% trans "Add registration" %}</a></li>
    <li><a href="/etreg/update/{{ object.id }}/">{% trans "Update registration information" %}</a></li>
    <li><a href="/etreg/list/">{% trans "View all registrations" %}</a></li>
    </ul>
    {% endifequal %}
    {% ifequal gen_view "update" %}
    <ul>
    <li><a href="/etreg/create/">{% trans "Add registration" %}</a></li>
    <li><a href="/etreg/detail/{{ object.id }}/">{% trans "View registration information" %}</a></li>
    <li><a href="/etreg/list/">{% trans "View all registrations" %}</a></li>
    </ul>
    {% endifequal %}
  </td>
  <td class="rcol">
    <div class="header">{% trans "45th European Convention 2012 Finland" %}</div>
    <div class="date">{% trans "10th June &ndash; 17th June 2012" %}</div>
  </td>
</tr>
</tbody>
</table>

<table class="ereg_1">
<tr class="hea">
  <td class="hea_bold">{% trans "Registration form" %}</td>
  <td class="hea">{% trans "One registration form per person" %}</td>
</tr>
<tr style="height: 8px;"><td colspan="2"></td></tr>
<!-- ---------- r 1:1 ---------- -->
{% if form.lastname.errors or form.firstname.errors or form.gender.errors %}
<tr>
  <td class="error" colspan="2">
    {% if form.lastname.errors %}
      <div><strong>{{ form.lastname.label_tag  }}:</strong> {% for error in form.lastname.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.firstname.errors %}
      <div><strong>{{ form.firstname.label_tag  }}:</strong> {% for error in form.firstname.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.gender.errors %}
      <div><strong>{{ form.gender.label_tag  }}:</strong> {% for error in form.gender.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
  </td>
</tr>
{% endif %}
<tr>
  <td> 
    {{ form.lastname.label_tag  }} {{ form.lastname }}
  </td> 
  <td>
    <div style="float: left; text-align: left;">
      {{ form.firstname.label_tag  }} {{ form.firstname }}
    </div>
    <div class="radio_horiz">
      {{ form.gender }}
    </div>
  </td>
</tr>
<!-- ---------- r 1:2 ---------- -->
{% if form.address.errors or form.dateofbirth.errors or form.height.errors %}
<tr>
  <td class="error" colspan="2">
    {% if form.address.errors %}
      <div><strong>{{ form.address.label  }}:</strong> {% for error in form.address.errors %}{{ error|escape }} {% endfor %}</div>
