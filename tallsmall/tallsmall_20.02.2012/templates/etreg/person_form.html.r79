      <div><strong>{{ form.city.label  }}:</strong> {% for error in form.city.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.clubmember.errors %}
      <div><strong>{{ form.clubmember.label  }}:</strong> {% for error in form.clubmember.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
  </td>
</tr>
{% endif %}
<tr>
  <td>
    {{ form.postalcode.label_tag  }} {{ form.postalcode }}
  </td>
  <td>
    <div style="float: left">{{ form.city.label_tag  }} {{ form.city }}</div>
    <div class="radio_horiz">{{ form.clubmember }}</div>
    <div class="radio_horiz_label">{{ form.clubmember.label_tag  }}</div>
  </td>
</tr>
<!-- ---------- r 1:4 ---------- -->
{% if form.country.errors or form.whichclub.errors %}
<tr>
  <td class="error" colspan="2">
    {% if form.country.errors %}
      <div><strong>{{ form.country.label  }}:</strong> {% for error in form.country.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.whichclub.errors %}
      <div><strong>{{ form.whichclub.label  }}:</strong> {% for error in form.whichclub.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
  </td>
</tr>
{% endif %}
<tr>
  <td>{{ form.country.label_tag  }} {{ form.country }}</td>
  <td>{{ form.whichclub.label_tag  }} {{ form.whichclub }}</td>
</tr>
<!-- ---------- r 1:5 ---------- -->
{% if form.email.errors or form.membnumb.errors %}
<tr>
  <td class="error" colspan="2">
    {% if form.email.errors %}
      <div><strong>{{ form.email.label  }}:</strong> {% for error in form.email.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.membnumb.errors %}
      <div><strong>{{ form.membnumb.label  }}:</strong> {% for error in form.membnumb.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
  </td>
</tr>
{% endif %}
<tr>
  <td>{{ form.email.label_tag  }} {{ form.email }}</td>
  <td>{{ form.membnumb.label_tag  }} {{ form.membnumb }}</td>
</tr>
<!-- ---------- r 1:6 ---------- -->
{% if form.mobilephone.errors or form.homephone.errors or form.fax.errors or form.language.errors %}
<tr>
  <td class="error" colspan="2">
    {% if form.mobilephone.errors %}
      <div><strong>{{ form.mobilephone.label  }}:</strong> {% for error in form.mobilephone.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.homephone.errors %}
      <div><strong>{{ form.homephone.label  }}:</strong> {% for error in form.homephone.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.fax.errors %}
      <div><strong>{{ form.fax.label  }}:</strong> {% for error in form.fax.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.language.errors %}
      <div><strong>{{ form.language.label  }}:</strong> {% for error in form.language.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
  </td>
</tr>
{% endif %}
<tr>
  <td>
    <div>
      <div style="margin-bottom: 10px">Language for welcome packets and guided tours</div>
      <div style="margin-bottom: 10px">{{ form.language.label }}</div>
      <div style="margin-bottom: 3px" class="radio_horiz">{{ form.language }}</div>
    </div>
  </td>
  <td>
    <div style="margin-bottom: 4px;">{{ form.mobilephone.label_tag  }} {{ form.mobilephone }}</div>
    <div style="margin-bottom: 4px;">{{ form.homephone.label_tag  }} {{ form.homephone }}</div>
    <div style="margin-bottom: 4px;">{{ form.fax.label_tag  }} {{ form.fax }}</div>
  </td>
</tr>






<tr style="height: 8px;"><td colspan="2"></td></tr>
</table>

