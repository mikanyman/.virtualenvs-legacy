      <div><strong>{{ form.dateofbirth.label  }}:</strong> {% for error in form.dateofbirth.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
    {% if form.height.errors %}
      <div><strong>{{ form.height.label  }}:</strong> {% for error in form.height.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
  </td>
</tr>
{% endif %}
<tr>
  <td>
    {{ form.address.label_tag  }} {{ form.address }}
  </td>
  <td>    
    {{ form.dateofbirth.label_tag  }} {{ form.dateofbirth }} 
    {{ form.height.label_tag  }} {{ form.height }}
  </td>
</tr>
<!-- ---------- r 1:3 ---------- -->
{% if form.postalcode.errors or form.city.errors or form.clubmember.errors %}
<tr>
  <td class="error" colspan="2">
    {% if form.postalcode.errors %}
      <div><strong>{{ form.postalcode.label  }}:</strong> {% for error in form.postalcode.errors %}{{ error|escape }} {% endfor %}</div>
    {% endif %}
